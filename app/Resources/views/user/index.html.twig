{% extends 'base.html.twig' %}

{% block body %}
    <h1>User list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>Gender</th>
                <th>Birthday</th>
                <th>Birthplace</th>
                <th>Email</th>
                <th>Phonenumber</th>
                <th>Grade</th>
                <th>Profile</th>
                <th>Documentid</th>
                <th>Photoid</th>
                <th>Directeur</th>
                <th>Codirecteur</th>
                <th>Effectue</th>
                <th>Mediaid</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.name }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.gender }}</td>
                <td>{% if user.birthday %}{{ user.birthday|date('Y-m-d') }}{% endif %}</td>
                <td>{{ user.birthPlace }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phoneNumber }}</td>
                <td>{{ user.grade }}</td>
                <td>{{ user.profile }}</td>
                <td>{{ user.documentId }}</td>
                <td>{{ user.photoId }}</td>
                <td>{% if user.directeur %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.coDirecteur %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.effectue %}Yes{% else %}No{% endif %}</td>
                <td>{{ user.mediaId }}</td>
                <td>{% if user.created %}{{ user.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if user.updated %}{{ user.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
